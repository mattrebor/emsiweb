<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd 
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
		
	<import resource="classpath:datasource-tx-jpa.xml" />
	<import resource="classpath:mail-context.xml" />
	
	<bean id="log4jInitialization" class="org.springframework.beans.factory.config.MethodInvokingFactoryBean">
   		<property name="targetClass" value="org.springframework.util.Log4jConfigurer" />
		<property name="targetMethod" value="initLogging" />
		<property name="arguments">
			<list>
				<value>${log4j.configuration:classpath:default-log4j.xml}</value>
		    </list>
		</property>
	</bean>
	
	<context:component-scan base-package="org.emsionline.emsiweb.service.jpa" />
	<context:component-scan base-package="org.emsionline.emsiweb.service.orderform.jpa"/>
	
</beans>